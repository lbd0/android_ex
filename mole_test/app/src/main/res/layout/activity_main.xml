<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/bestScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Score : 300"
        android:textSize="11pt"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : 0"
        android:textSize="13pt"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bestScore"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer 30"
        android:textSize="15pt"
        android:textColor="@color/timer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:id="@+id/img1"
        android:layout_width="125dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="145dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:src="@drawable/animal" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="125dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img1"
        app:layout_constraintRight_toLeftOf="@+id/img3"
        android:layout_marginTop="145dp"
        android:src="@drawable/animal" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="125dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="145dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        android:src="@drawable/animal" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="125dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintBottom_toTopOf="@+id/img7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:src="@drawable/animal" />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="125dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/img2"
        app:layout_constraintBottom_toTopOf="@+id/img8"
        app:layout_constraintLeft_toRightOf="@+id/img4"
        app:layout_constraintRight_toLeftOf="@+id/img6"
        android:src="@drawable/animal" />

    <ImageView
        android:id="@+id/img6"
        android:layout_width="125dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/img3"
        app:layout_constraintBottom_toTopOf="@+id/img9"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        android:src="@drawable/animal" />

    <ImageView
        android:id="@+id/img7"
        android:layout_width="125dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/animal" />

    <ImageView
        android:id="@+id/img8"
        android:layout_width="125dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img7"
        app:layout_constraintRight_toLeftOf="@+id/img9"
        android:layout_marginBottom="60dp"
        android:src="@drawable/animal" />

    <ImageView
        android:id="@+id/img9"
        android:layout_width="125dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/animal" />

</androidx.constraintlayout.widget.ConstraintLayout>